<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <!-- 타이틀바 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Room Information"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#483D8B"
            android:layout_width="match_parent"
            android:layout_height="53dp" />
    </LinearLayout>
    <!-- //end 타이틀바 -->

    <!-- Notice -->
    <LinearLayout
        android:padding="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtText1"
                android:text="Room Number : "
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                android:alpha="0.87"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/roomNumText"
                android:textSize="15sp"
                android:textColor="#000"
                android:alpha="0.87"
                android:gravity="left"
                android:background="#eeeeee"
                android:layout_weight="1"
                android:ems="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtText2"
                android:text="Price : "
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                android:alpha="0.87"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/priceText"
                android:textSize="15sp"
                android:textColor="#000"
                android:alpha="0.87"
                android:gravity="left"
                android:background="#eeeeee"
                android:layout_weight="1"
                android:ems="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    <!--    <LinearLayout
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtText3"
                android:text="Room Type : "
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                android:alpha="0.87"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/roomTypeText"
                android:textSize="15sp"
                android:textColor="#000"
                android:alpha="0.87"
                android:gravity="left"
                android:background="#eeeeee"
                android:layout_weight="1"
                android:ems="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout> -->

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtText4"
                android:text="Capacity : "
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                android:alpha="0.87"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/capacityText"
                android:textSize="15sp"
                android:textColor="#000"
                android:alpha="0.87"
                android:gravity="left"
                android:background="#eeeeee"
                android:layout_weight="1"
                android:ems="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <!-- Notice -->

    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!-- 닫기 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/add"
            android:text="Add"
            android:textSize="15sp"
            android:textColor="#483D8B"
            android:padding="16dp"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="150dp"
            android:layout_height="53dp"
            android:onClick="mOnClose"/>
    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>